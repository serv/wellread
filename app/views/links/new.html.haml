.container#new-link
  .row
    .col-md-12
      %h1 New Link
  .row
    .col-md-6.col-xs-6
      = form_for @link do |f|
        .form-group
          = f.label :title
          = f.text_field :title, class: 'form-control'
        .form-group
          = f.label :url, 'URL'
          = f.text_field :url, class: 'form-control'

        = f.fields_for :authors do |authors_form|
          .form-group
            = authors_form.label :name, 'Author'
            .author-field
              = authors_form.text_field :name, class: 'typeahead form-control'

        = f.fields_for :categories do |categories_form|
          .form-group
            = categories_form.label :name, 'Category'
            .category-field
              = categories_form.text_field :name, class: 'typeahead form-control'

        = f.submit 'Submit', class: 'btn btn-primary'

    .col-md-6.col-xs-6
      .well#form-suggestion
        #selected-title
          %h4 What to Submit
          %p
            We look articles and posts that are
            %i influential
            and
            %i powerful.
          %p
            It could be a famous news paper article that have a far reaching audience.
            Or it could be a transformative blog post that a select group of people find
            extremely interesting.
        #selected-url
          %p Now the URL of the article?
        #selected-author
          %p
            What's the author's name?
        #selected-category
          Please select an appropriate category for this article.
